{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "~last/shared/assets": ["../../../libs/shared/assets/src/index.ts"],
      "~last/shared/types": ["../../../libs/shared/types/src/index.ts"],
      "~last/request/node": ["../../../libs/request/node/src/index.ts"],
      "~last/request/core": ["../../../libs/request/core/src/index.ts"]
    },
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "isolatedModules": true
  }
}
